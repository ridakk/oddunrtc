<!doctype html>
<html lang="en-US" ng-app="main">

  <head>
    <% include ../partials/home_head.ejs %>
  </head>

  <body ng-controller="mainCtrl">

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-5" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">OdunRtc</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-5">
          <form class="navbar-form navbar-left" role="search">
            <input ng-change="searchInputChange()" ng-model="searchInput" type="text" placeholder="username, email" class="search-input">
          </form>
          <p class="navbar-text navbar-right">Signed in
            <i class="fa fa-{{user.type}}">
              {{user.displayName}}</i>
            <a href="/logout">
              <i class="fa fa-sign-out"></i>
            </a>

          </p>
        </div>
      </div>
    </nav>

    <ul ng-if="userList" class="list-group">
      <div ng-repeat="user in userList">
        <li class="list-group-item"><i class="fa fa-{{user.type}} fa-fw"></i> {{user.displayName}} {{user.username}} {{user.email}}</li>
      </div>
    </ul>

    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="text-center">
            <i class="fa fa-external-link">
              Share your link -
              {{user.link}}</i>
          </div>

          <div ui-view></div>
        </div>
      </div>
    </div>
  </body>

  <% include ../partials/home_script.ejs %>

</html>
